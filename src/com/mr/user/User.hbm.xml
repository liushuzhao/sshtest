<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
 <!-- User信息字段配置信息 -->
 <hibernate-mapping>
 	<class name="com.mr.user.User" table="t_user">
 		<!-- id值 -->
 		<id name="id" column="id" type="int">
			<generator class="native"/>
		</id>
		<property name="username" type="string" length="45">
			<column name="username"/>
		</property>
		<property name="password" type="string" length="45">
			<column name="password"/>
		</property>
		<property name="phone" type="string" length="45">
			<column name="phone"/>
		</property>
		<property name="email" type="string" length="45">
			<column name="email"/>
		</property>
 	</class>
 </hibernate-mapping>